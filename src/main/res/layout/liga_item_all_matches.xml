<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:applicaster="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/card_all_matches"
    applicaster:cardCornerRadius="@dimen/card_corner_radius"
    applicaster:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/min_height_item_all_matches">

        <ImageView
            android:id="@+id/iv_all_matches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/todos_los_partidos"
            android:scaleType="centerCrop"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

