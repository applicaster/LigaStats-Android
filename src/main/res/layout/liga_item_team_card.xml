<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingEnd="5dp">

        <com.applicaster.util.ui.CustomTextView
            android:id="@+id/tv_order_number"
            style="@style/Theme.Opta.Title"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/text_title"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_order_number"
            android:src="@drawable/unknow_flag" />

        <com.applicaster.util.ui.CustomTextView
            android:id="@+id/tv_team_name"
            style="@style/Theme.Opta.Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toLeftOf="@+id/ll_scores"
            android:layout_toRightOf="@+id/iv_flag"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_team"
            tools:text="FC BARCELONA" />

        <LinearLayout
            android:id="@+id/ll_scores"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <com.applicaster.util.ui.CustomTextView
                android:id="@+id/tv_points_1"
                style="@style/Theme.Opta.Team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.applicaster.util.ui.CustomTextView
                android:id="@+id/tv_points_2"
                style="@style/Theme.Opta.Team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.applicaster.util.ui.CustomTextView
                android:id="@+id/tv_points_3"
                style="@style/Theme.Opta.Team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.applicaster.util.ui.CustomTextView
                android:id="@+id/tv_points_4"
                style="@style/Theme.Opta.Team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />

            <com.applicaster.util.ui.CustomTextView
                android:id="@+id/tv_points_5"
                style="@style/Theme.Opta.Team"
                app:customtypeface="bebasneue-bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="0" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_indicator"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            tools:background="@color/indicator_red" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

