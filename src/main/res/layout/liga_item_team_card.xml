<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:applicaster="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    applicaster:cardCornerRadius="@dimen/card_corner_radius"
    applicaster:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/tv_order_number"
                    style="@style/Theme.Opta.Title"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_title" />

                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="60dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@+id/tv_order_number" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/tv_team_name"
                    style="@style/Theme.Opta.Team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_toLeftOf="@+id/iv_arrow"
                    android:layout_toRightOf="@+id/iv_flag"
                    android:textColor="@color/text_team"
                    tools:text="FC BARCELONA" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/arrow_down_plugin" />

            </RelativeLayout>

            <View
                android:id="@+id/vDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="21dp"
                android:background="@color/layout_background"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/rl_second_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="37dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp"
                android:visibility="gone"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_title_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/games_played"
                        android:textColor="@color/details_text"
                        android:textSize="14sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_title_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/win_title"
                        android:textColor="@color/details_text"
                        android:textSize="14sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_title_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/drawn_title"
                        android:textColor="@color/details_text"
                        android:textSize="14sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_title_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/lost_title"
                        android:textColor="@color/details_text"
                        android:textSize="14sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_title_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/points_title"
                        android:textColor="@color/details_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/details_text"
                        android:textSize="20sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/details_text"
                        android:textSize="20sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/details_text"
                        android:textSize="20sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/details_text"
                        android:textSize="20sp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/details_text"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_indicator"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view_content"
            android:layout_alignBottom="@+id/view_content"
            tools:background="@color/indicator_red" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

