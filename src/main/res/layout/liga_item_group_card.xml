<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:applicaster="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    applicaster:cardCornerRadius="@dimen/card_corner_radius"
    applicaster:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="8dp">

            <com.applicaster.util.ui.CustomTextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="GRUPO A"
                style="@style/Theme.Opta.Title"
                android:textColor="@color/text_title" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/arrow_down_plugin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:weightSum="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_team_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_flag_1"
                        android:layout_width="72dp"
                        android:layout_height="49dp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="COL"
                        style="@style/Theme.Opta.Country"/>

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="6"
                        style="@style/Theme.Opta.Points" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_team_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_flag_2"
                        android:layout_width="72dp"
                        android:layout_height="49dp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="JAP"
                        style="@style/Theme.Opta.Country" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="3"
                        style="@style/Theme.Opta.Points" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_team_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_flag_3"
                        android:layout_width="72dp"
                        android:layout_height="49dp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="PAR"
                        style="@style/Theme.Opta.Country" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        style="@style/Theme.Opta.Points" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_team_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_flag_4"
                        android:layout_width="72dp"
                        android:layout_height="49dp" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_name_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="PER"
                        style="@style/Theme.Opta.Country" />

                    <com.applicaster.util.ui.CustomTextView
                        android:id="@+id/tv_points_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        style="@style/Theme.Opta.Points" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="16dp"
            android:background="@color/layout_background"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/rl_second_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="32dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:weightSum="8">
            <!-- teams -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/team_1"
                    android:layout_width="@dimen/mini_flag_width"
                    android:layout_height="@dimen/mini_flag_height"
                    android:layout_marginTop="8dp" />

                <ImageView
                    android:id="@+id/team_2"
                    android:layout_width="@dimen/mini_flag_width"
                    android:layout_height="@dimen/mini_flag_height"
                    android:layout_marginTop="8dp" />

                <ImageView
                    android:id="@+id/team_3"
                    android:layout_width="@dimen/mini_flag_width"
                    android:layout_height="@dimen/mini_flag_height"
                    android:layout_marginTop="8dp" />

                <ImageView
                    android:id="@+id/team_4"
                    android:layout_width="@dimen/mini_flag_width"
                    android:layout_height="@dimen/mini_flag_height"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
            <!-- played -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/games_played"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/played_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/played_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/played_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/played_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
            <!-- won -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/win_title"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/won_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/won_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/won_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/won_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
            <!-- lost -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lost_title"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/lost_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/lost_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/lost_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/lost_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
            <!-- drawn -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drawn_title"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/drawn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/drawn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/drawn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/drawn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
            <!-- GF -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_for_title"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gf_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gf_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gf_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gf_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
            <!-- GC -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_against_title"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/gc_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
            <!-- +/- -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+/-"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/plus_less_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/plus_less_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/plus_less_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/plus_less_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
            <!-- PTS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.applicaster.util.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_title"
                    android:textColor="@color/details_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/pts_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/pts_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/pts_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />

                <com.applicaster.util.ui.CustomTextView
                    android:id="@+id/pts_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/details_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

